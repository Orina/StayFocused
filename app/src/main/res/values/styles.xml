<resources>

    <!-- Base application theme. -->

    <style name="StayFocusedTheme" parent="StayFocusedTheme.Base"/>

    <style name="StayFocusedTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="StayFocusedTheme.TextAppearance" >
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="StayFocusedTheme.TextAppearance.TaskItem" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/task_item_text_size</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>

    </style>

    <style name="StayFocusedTheme.TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="StayFocusedTheme.TextAppearance.Title.Inverse" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
